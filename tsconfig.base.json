{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "types": ["node"],

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  }
}